<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChapterOne | Refer & Earn</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
    <!-- Add SweetAlert CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.12/sweetalert2.min.css">
    <style>
        :root {
            --primary-brown: #8B5A2B;
            --secondary-brown: #A67C52;
            --light-brown: #D2B48C;
            --dark-brown: #654321;
            --accent-gold: #D4AF37;
            --soft-shadow: rgba(0, 0, 0, 0.05);
            --card-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            --sidebar-width: 260px;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        
        .back-home-btn {
            color: var(--primary-brown);
            text-decoration: none;
            display: flex;
            align-items: center;
            font-size: 14px;
            padding: 6px 12px;
            border: 1px solid var(--primary-brown);
            border-radius: 4px;
            transition: all 0.3s ease;
        }
        .back-home-btn:hover {
            background-color: var(--primary-brown);
            color: white;
        }

        .dashboard-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .dashboard-sidebar {
            width: var(--sidebar-width);
            background-color: white;
            position: fixed;
            height: 100vh;
            box-shadow: var(--card-shadow);
            padding: 25px 0;
            overflow-y: auto;
            z-index: 10;
            transition: transform 0.3s ease;
        }

        .logo-text {
            font-family: 'Playfair Display', serif;
            color: var(--primary-brown);
            margin: 0;
        }

        .user-profile .profile-image img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border: 3px solid var(--light-brown);
        }

        .sidebar-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-nav li {
            margin-bottom: 5px;
        }

        .nav-link1 {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: #555;
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }

        .nav-link1.active {
            background-color: rgba(139, 90, 43, 0.1);
            color: var(--primary-brown);
            border-left-color: var(--primary-brown);
        }

        .nav-link1:hover {
            background-color: rgba(139, 90, 43, 0.1);
            color: var(--primary-brown);
            border-left-color: var(--primary-brown);
        }

        .nav-link1 i {
            margin-right: 12px;
            width: 20px;
            text-align: center;
        }

        /* Main Content Styles */
        .dashboard-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: 30px;
            transition: margin-left 0.3s ease;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .dashboard-header h2 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-brown);
            margin: 0;
        }

        /* Content Cards */
        .content-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: var(--card-shadow);
            margin-bottom: 25px;
            overflow: hidden;
        }

        .card-header {
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-header h5 {
            margin: 0;
            color: var(--secondary-brown);
            font-family: 'Playfair Display', serif;
        }

        .card-body {
            padding: 20px;
        }

        /* Referral Box */
        .referral-box {
            text-align: center;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .referral-icon {
            font-size: 48px;
            color: var(--primary-brown);
            margin-bottom: 15px;
        }

        .referral-code {
            background-color: rgba(139, 90, 43, 0.1);
            border: 1px dashed var(--primary-brown);
            padding: 15px;
            border-radius: 8px;
            font-size: 24px;
            font-weight: 600;
            letter-spacing: 2px;
            color: var(--dark-brown);
            display: inline-block;
            margin: 10px 0;
        }

        .copy-btn {
            background-color: var(--primary-brown);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .copy-btn:hover {
            background-color: var(--dark-brown);
        }

        /* How it works */
        .steps-container {
            margin-top: 30px;
        }

        .step-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 25px;
        }

        .step-number {
            width: 40px;
            height: 40px;
            background-color: rgba(139, 90, 43, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--primary-brown);
            margin-right: 15px;
            flex-shrink: 0;
        }

        .step-content h5 {
            margin: 0 0 5px;
            color: var(--secondary-brown);
        }

        .step-content p {
            margin: 0;
            color: #777;
        }

        /* Stats */
        .stats-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
            text-align: center;
        }

        .stat-item {
            padding: 15px;
        }

        .stat-number {
            font-size: 32px;
            font-weight: 600;
            color: var(--primary-brown);
            margin-bottom: 5px;
        }

        .stat-label {
            color: #777;
        }

        /* Apply Referral Form */
        .apply-referral-card {
            margin-top: 30px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            border-color: #ddd;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: var(--light-brown);
        }

        .apply-btn {
            background-color: var(--primary-brown);
            color: white;
            border: none;
            padding: 10px 30px;
            border-radius: 5px;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .apply-btn:hover {
            background-color: var(--dark-brown);
        }

        .share-buttons {
            margin-top: 20px;
        }

        .share-btn {
            display: inline-flex;
            align-items: center;
            padding: 8px 15px;
            border-radius: 5px;
            color: white;
            text-decoration: none;
            margin: 0 5px 10px;
            transition: opacity 0.3s;
        }

        .share-btn:hover {
            opacity: 0.9;
            color: white;
        }

        .share-btn i {
            margin-right: 8px;
        }

        .share-whatsapp {
            background-color: #25D366;
        }

        .share-facebook {
            background-color: #3b5998;
        }

        .share-twitter {
            background-color: #1DA1F2;
        }

        .share-email {
            background-color: #D44638;
        }

        /* Toggle Button */
        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 100;
            background-color: var(--primary-brown);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 5px;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        /* Alert styles */
        .alert {
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .alert-success {
            background-color: rgba(39, 174, 96, 0.1);
            border-color: #27ae60;
            color: #27ae60;
        }

        .alert-warning {
            background-color: rgba(241, 196, 15, 0.1);
            border-color: #f1c40f;
            color: #f1c40f;
        }

        .alert-info {
            background-color: rgba(52, 152, 219, 0.1);
            border-color: #3498db;
            color: #3498db;
        }

        /* Custom SweetAlert2 styles */
        .swal2-popup {
            font-family: 'Poppins', sans-serif;
            border-radius: 10px;
        }

        .swal2-title {
            font-family: 'Playfair Display', serif;
            color: var(--primary-brown);
        }

        .swal2-confirm {
            background-color: var(--primary-brown) !important;
        }

        .swal2-confirm:focus {
            box-shadow: 0 0 0 2px rgba(139, 90, 43, 0.2) !important;
        }

        .swal2-cancel {
            background-color: #6c757d !important;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .dashboard-sidebar {
                transform: translateX(-100%);
            }
            
            .dashboard-sidebar.active {
                transform: translateX(0);
            }
            
            .dashboard-content {
                margin-left: 0;
            }
            
            .toggle-sidebar {
                display: flex;
            }
        }
        
        .logo-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            margin-bottom: 25px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Mobile Toggle Button (visible on small screens) -->
        <button class="toggle-sidebar d-lg-none">
            <i class="fas fa-bars"></i>
        </button>
        
        <!-- Sidebar -->
        <div class="dashboard-sidebar">
            <!-- Added Back to Home button like in wallet page -->
            <div class="logo-container">
                <a href="/" class="back-home-btn">
                    <i class="fas fa-home me-1"></i> Back To Home
                </a>
            </div>

            <!-- Added logo container like in wallet page -->
            <div class="logo-container">
                <h3 class="logo-text">ChapterOne</h3>
            </div>
            
            <div class="user-profile text-center mb-4">
                <div class="profile-image">
                    <img src="<%= user.profileImage %>" alt="Profile Picture" class="rounded-circle">
                </div>
                <h5 class="mt-3"><%= user.firstname %> <%= user.lastname %></h5>
                <p class="text-muted small"><%= user.email %></p>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a href="/account" class="nav-link1">
                            <i class="fas fa-th-large"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/account/profile" class="nav-link1">
                            <i class="fas fa-user"></i>
                            <span>Profile</span>
                        </a>
                    </li>
                    <li>
                        <a href="/account/edit-profile" class="nav-link1">
                            <i class="fas fa-user-edit"></i>
                            <span>Edit Profile</span>
                        </a>
                    </li>
                    <li>
                        <% if (!user.googleId) { %>
                            <a href="/account/change-password" class="nav-link1">
                                <i class="fas fa-lock"></i>
                                <span>Change Password</span>
                            </a>
                        <% } %>
                    </li>
                    <li>
                        <% if (!user.googleId) { %>
                            <a href="/account/change-email" class="nav-link1">
                                <i class="fas fa-envelope"></i>
                                <span>Change Email</span>
                            </a>
                        <% } %>
                    </li>
                    <li>
                        <a href="/account/orders" class="nav-link1">
                            <i class="fas fa-shopping-bag"></i>
                            <span>Orders</span>
                        </a>
                    </li>
                    <li>
                        <a href="/account/wallet" class="nav-link1">
                            <i class="fas fa-wallet"></i>
                            <span>Wallet</span>
                        </a>
                    </li>
                    <li>
                        <a href="/referral" class="nav-link1 active">
                            <i class="fas fa-gift"></i>
                            <span>Refer & Earn</span>
                        </a>
                    </li>
                    <li class="mt-4">
                        <a href="/logout" class="nav-link1 text-danger">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        
        <!-- Main Content -->
        <div class="dashboard-content">
            <div class="dashboard-header">
                <h2>Refer & Earn</h2>
            </div>
            
            <!-- Referral Stats Card -->
            <div class="content-card">
                <div class="card-header">
                    <h5>Your Referral Stats</h5>
                </div>
                <div class="card-body">
                    <div class="referral-box">
                        <div class="referral-icon">
                            <i class="fas fa-gift"></i>
                        </div>
                        <h4>Share your referral code with friends</h4>
                        <p>Your friends will receive ₹100 in their wallet, and you'll earn ₹100 for each successful referral.</p>
                        
                        <div class="referral-code">
                            <%= user.referralCode %>
                        </div>
                        
                        <button class="copy-btn" onclick="copyReferralCode()">
                            <i class="fas fa-copy"></i> Copy Code
                        </button>
                        
                        <div class="stats-container">
                            <div class="stat-item">
                                <div class="stat-number"><%= user.referralCount %></div>
                                <div class="stat-label">Successful Referrals</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-number">₹<%= user.referralCount * 100 %></div>
                                <div class="stat-label">Total Earned</div>
                            </div>
                        </div>
                        
                        <div class="share-buttons">
                            <a href="https://api.whatsapp.com/send?text=Use my referral code <%= user.referralCode %> at ChapterOne to get ₹100 off on your first book order!" class="share-btn share-whatsapp" target="_blank">
                                <i class="fab fa-whatsapp"></i> WhatsApp
                            </a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=https://chapterone.com/referral&quote=Use my referral code <%= user.referralCode %> at ChapterOne to get ₹100 off on your first book order!" class="share-btn share-facebook" target="_blank">
                                <i class="fab fa-facebook-f"></i> Facebook
                            </a>
                            <a href="https://twitter.com/intent/tweet?text=Use my referral code <%= user.referralCode %> at ChapterOne to get ₹100 off on your first book order!&url=https://chapterone.com/referral" class="share-btn share-twitter" target="_blank">
                                <i class="fab fa-twitter"></i> Twitter
                            </a>
                            <a href="mailto:?subject=Join me on ChapterOne&body=Use my referral code <%= user.referralCode %> at ChapterOne to get ₹100 off on your first book order!" class="share-btn share-email">
                                <i class="fas fa-envelope"></i> Email
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- How it works Card -->
            <div class="content-card">
                <div class="card-header">
                    <h5>How It Works</h5>
                </div>
                <div class="card-body">
                    <div class="steps-container">
                        <div class="step-item">
                            <div class="step-number">1</div>
                            <div class="step-content">
                                <h5>Share Your Code</h5>
                                <p>Share your unique referral code with friends via social media, email, or direct message.</p>
                            </div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">2</div>
                            <div class="step-content">
                                <h5>Friends Sign Up</h5>
                                <p>When your friends sign up using your referral code, they get ₹100 off their first order.</p>
                            </div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">3</div>
                            <div class="step-content">
                                <h5>You Earn Rewards</h5>
                                <p>You earn ₹100 in your wallet for each successful referral when they place their first order.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Apply Referral Card -->
            <% if (!user.hasAppliedReferral) { %>
            <div class="content-card apply-referral-card">
                <div class="card-header">
                    <h5>Apply a Referral Code</h5>
                </div>
                <div class="card-body">
                    <p>Have a friend's referral code? Apply it below to get ₹100 off your first order!</p>
                    <!-- Updated to use fetch instead of form submission -->
                    <div class="row">
                        <div class="col-md-8">
                            <input type="text" id="referralCodeInput" class="form-control" placeholder="Enter referral code" required>
                        </div>
                        <div class="col-md-4">
                            <button id="applyReferralBtn" class="btn apply-btn w-100">Apply Code</button>
                        </div>
                    </div>
                </div>
            </div>
            <% } else { %>
            <div class="content-card apply-referral-card">
                <div class="card-header">
                    <h5>Referral Status</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i> You have successfully applied a referral code!
                    </div>
                    <p>You've already applied a referral code to your account. Your ₹100 discount will be automatically applied to your first order.</p>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.12/sweetalert2.min.js"></script>
    <script>
        // Toggle sidebar on mobile
        document.querySelector('.toggle-sidebar')?.addEventListener('click', function() {
            document.querySelector('.dashboard-sidebar').classList.toggle('active');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.dashboard-sidebar');
            const toggleBtn = document.querySelector('.toggle-sidebar');
            
            if (window.innerWidth <= 992 && 
                sidebar.classList.contains('active') && 
                !sidebar.contains(event.target) && 
                event.target !== toggleBtn) {
                sidebar.classList.remove('active');
            }
        });

        // Copy referral code to clipboard
        function copyReferralCode() {
            const referralCode = "<%= user.referralCode %>";
            navigator.clipboard.writeText(referralCode).then(() => {
                const copyBtn = document.querySelector('.copy-btn');
                copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied!';
                setTimeout(() => {
                    copyBtn.innerHTML = '<i class="fas fa-copy"></i> Copy Code';
                }, 2000);
            });
        }

        // Apply referral code using fetch API
        document.getElementById('applyReferralBtn')?.addEventListener('click', function() {
            const referralCodeInput = document.getElementById('referralCodeInput');
            const referralCode = referralCodeInput.value.trim();
            
            if (!referralCode) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Empty Code',
                    text: 'Please enter a referral code',
                    confirmButtonColor: '#8B5A2B'
                });
                return;
            }

            // Show loading indicator
            Swal.fire({
                title: 'Processing...',
                text: 'Applying your referral code',
                allowOutsideClick: false,
                allowEscapeKey: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch('/referral/apply', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ referralCode: referralCode })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: data.message || 'Referral code applied successfully!',
                        confirmButtonColor: '#8B5A2B'
                    }).then(() => {
                        // Reload the page to show updated status
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message || 'Failed to apply referral code',
                        confirmButtonColor: '#8B5A2B'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong. Please try again later.',
                    confirmButtonColor: '#8B5A2B'
                });
            });
        });
    </script>
</body>
</html>